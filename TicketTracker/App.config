<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
      <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <root>
     <level value="INFO"/>
     <appender-ref ref="TimeTrackerAppender" />
    </root>
    <appender name="TimeTrackerAppender" type="log4net.Appender.RollingFileAppender">
      <file value="rolling.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
    </appender>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <connectionStrings>   
    <add name="TicketTrackerConnectionString" connectionString="Data Source=localhost;Initial Catalog=TicketTracker;User ID=tickettracker;Password=tickettracker" providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>